article
  max-width 940px
  overflow-y auto

  .entry-title
    color brand-primary
    text-align center

    .fa-stack
      vertical-align text-top

    h2
      vertical-align middle
      display: inline-block
      font-weight 200

  img
    max-width 100px
    max-height 100px

  blockquote
    border-left 5px solid lighten(brand-primary, 70%)

  pre
    background-color lighten(brand-primary, 97%)
    border 0
    border-radius 2px

    code
      color #666

article:nth-of-type(1)
  margin-top: 20px
  border-top 5px solid darken(brand-primary, 20%)
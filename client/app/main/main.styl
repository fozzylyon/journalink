.entry-form
  textarea
    resize vertical
    max-height 300px

article
  max-width 940px
  overflow-y auto

  &:disabled
    background-color lighten(brand-primary, 80%)

  .entry-title
    color brand-primary
    text-align center

    a
      padding 2px
      visibility hidden
      float right
      margin-top 24px

    &:hover a
      visibility visible

    .fa-stack
      vertical-align text-top

    h2
      vertical-align middle
      display: inline-block
      font-weight 200

  .overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 10
    background-color rgba(white, 0.8)

    > *
      color #999
      font-size 36px
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      text-shadow -1px -1px 0 white,
        1px -1px 0 white,
        -1px 1px 0 white,
        1px 1px 0 white,
        0 0 1em white;

  img
    max-width 100px
    max-height 100px

  blockquote
    border-left 5px solid lighten(brand-primary, 70%)

  pre
    background-color lighten(brand-primary, 97%)
    border 0
    border-radius 2px

    code
      color #666

article:nth-of-type(1)
  margin-top: 20px
  border-top 5px solid darken(brand-primary, 20%)